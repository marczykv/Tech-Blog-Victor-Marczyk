<h1>Dashboard</h1>
{{#each posts}}
    <div class="post">
        <h2>{{this.title}}</h2>
        <p>{{formatDate this.createdAt}}</p>
        <p>{{this.content}}</p>
        <a href="/post/edit/{{this.id}}">Edit</a>
        <a href="/post/delete/{{this.id}}">Delete</a>
    </div>
{{/each}}
{{#if loggedIn}}
<form class="post-form" action="/post/add" method="POST">
    <input type="text" name="title" placeholder="Title">
    <textarea name="content" placeholder="Content"></textarea>
    <button type="submit">Create Post</button>
</form>
{{/if}}
