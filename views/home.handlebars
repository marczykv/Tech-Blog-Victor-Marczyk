<h1>Homepage</h1>
{{#each posts}}
    <div class="post">
        <h2>{{this.title}}</h2>
        <p>By {{this.User.username}} - {{formatDate this.createdAt}}</p>
        <p>{{this.content}}</p>
        <ul>
            {{#each this.Comments}}
                <li>{{this.text}}</li>
            {{/each}}
        </ul>
        {{#if loggedIn}}
        <form class="comment-form" action="/comment/add" method="POST">
            <input type="text" name="text" placeholder="Add a comment">
            <input type="hidden" name="post_id" value="{{this.id}}">
            <button type="submit">Add Comment</button>
        </form>
        {{/if}}
    </div>
{{/each}}
